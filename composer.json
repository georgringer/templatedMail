{
  "name": "georgringer/templatedmail",
  "type": "typo3-cms-extension",
  "description": "Better HTML email templates",
  "keywords": [
    "TYPO3",
    "extension",
    "mail",
    "fluid"
  ],
  "authors": [
    {
      "name": "Georg Ringer",
      "role": "Developer",
      "homepage": "https://ringer.it"
    }
  ],
  "license": ["GPL-2.0-or-later"],
  "require": {
    "pelago/emogrifier": "^3.0",
    "typo3/cms-core": "^10"
  },
  "require-dev": {
    "simonschaufi/typo3-support": "^1.0",
    "typo3/testing-framework": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "GeorgRinger\\Templatedmail\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GeorgRinger\\Templatedmail\\Tests\\": "Tests"
    }
  },
  "replace": {
    "georgringer/templatedmail": "self.version",
    "typo3-ter/templatedmail": "self.version"
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web",
      "extension-key": "templatedmail"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "TYPO3\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
    ]
  },
  "config": {
    "sort-packages": true,
    "bin-dir": ".Build/bin",
    "vendor-dir": ".Build/vendor"
  }
}
